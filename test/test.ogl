            translate -> z=-5.0
            rotate -> axis=@UP, amnt=160deg
        }

        # Event Handlers
        on -> type=@DRAG, btn=@BUTTON0, hndl=(rotate -> x=(.delta_y * -1), y=.delta_x)
        on -> type=@DRAG, btn=@BUTTON2, hndl=(translate -> x=(.delta_x * 2), y=(.delta_y * 2))
        
    }

    geometry {

        # Picks the loader automatically, based on the extension
