scene {

    geometry {
        source -> src='./models/cube.json'

        transform {
            scale -> x=0.5, y=0.5, z=0.5
            translate -> x=2.0, z=-5.0
        }

        on drag {
            rotate -> axis=vec3(0.0, 1.0, 0.0), amnt=.delta_x
            rotate -> axis=vec3(1.0, 0.0, 0.0), amnt=(.delta_y * -2.0)
        }
    }

}