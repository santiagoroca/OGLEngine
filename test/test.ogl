scene {

    camera {
        projection -> fov=60.0, near=1.0, far=10.0

        transform {
            translate -> z=-5.0
        }
    }

    geometry {

        # Picks the loader automatically, based on the extension
        source -> src='./models/cube.json'

        # Color can be defined in so many pretty ways
        color -> r=1.0, g=0.0, b=0.9

        transform {
            scale -> x=0.5, y=0.5, z=0.5
        }

        # Event Handlers
        on -> type=@KEYPRESS, key='a', hndl=(translate -> x=-0.1)
        on -> type=@KEYPRESS, key='d', hndl=(translate -> x=0.1)
        on -> type=@KEYPRESS, key='w', hndl=(translate -> y=0.1)
        on -> type=@KEYPRESS, key='s', hndl=(translate -> y=-0.1)
        on -> type=@DRAG, hndl=(rotate -> axis=@UP, amnt=.delta_x)
        
    }

}