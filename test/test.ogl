scene {

    geometry {
        source './models/cube.json'

        transform {
            scale vec3(0.5, 0.5, 0.5)
            translate vec3(2.0, 0.0, -5.0)
        }

        on drag {
            translate vec3(delta_x, delta_y, none)
        }
    }

    geometry {
        source './models/cube.json'

        transform {
            scale vec3(0.5, 0.5, 0.5)
            translate vec3(-2.0, 0.0, -5.0)
        }

        on drag {
            rotate vec3(0.0, 1.0, 0.0) .delta_x
        }
    }

}