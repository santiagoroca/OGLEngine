            scale -> size=0.00933
        }

        #on -> type=@INTERVAL, every=@FRAME, hndl=(rotate -> y=0deg)
        on -> type=@INTERVAL, hndl=(rotate -> y=-0.006deg, space=@WORLD)
    }

