scene {

    add light {
        set type=@POINT
        set position=vec3(0.0, 0.0, 0.0)
    }

    add light {
        set type=@AMBIENT
        set color=0x111111
    }

    add -> camera {

        # By default, cameras are perspective's
        set -> projection {
            set -> fov=45.0
            set -> near=0.1
            set -> far=1000.0
        } 
        
        # This will ovewrite the model transform and add this new 
        # listener
        set transform {

            set model {
                on -> type=@DRAG, btn=@BUTTON0, hndl=(
                    rotate -> x=(.delta_y * -1), y=.delta_x
                )
            }

            set world {
                translate -> z=-25.0
                on -> type=@DRAG, btn=@BUTTON2, hndl=(translate -> x=(.delta_x * 4), y=(.delta_y * 4))
                on -> type=@MOUSEWHEEL, hndl=(translate -> z=.delta_z)
            }
        }
        
    }

    # Mercury
    add planet {
        set source='./models/earth.obj'
        set texture='./models/Earth_TEXTURE_CM.png'

        transform {
            translate -> z=2.0, space=@WORLD
            scale -> size=0.00359
        }

        #on -> type=@INTERVAL, every=@FRAME, hndl=(rotate -> y=0deg)
        on -> type=@INTERVAL, hndl=(rotate -> y=-0.0245deg, space=@WORLD)
    }

    # Venus
    geometry {
        source -> src='./models/earth.obj'
        texture -> src='./models/Earth_TEXTURE_CM.png'

        transform {
            translate -> z=3.625, space=@WORLD
            scale -> size=0.00862
        }

        #on -> type=@INTERVAL, every=@FRAME, hndl=(rotate -> y=0deg)
        on -> type=@INTERVAL, hndl=(rotate -> y=-0.0096deg, space=@WORLD)
    }

    # Earth
