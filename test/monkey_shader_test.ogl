scene {

    add geometry { 
        set source='./models/monkey.obj'
        set color=0xff0000ff
        set regenerate_normals=true
    }

    add camera {
        set fov=20.0
        set near=0.1
        set far=1000.0

        # This will ovewrite the model transform and add this new 
        # listener
        set transform {

            set model {
                on -> type=ogl.DRAG, btn=ogl.BUTTON0, hndl=(
                    rotate -> x=(.delta_y * -3), y=(.delta_x * 3)
                )
            }

            set world {
                on -> type=ogl.MOUSEWHEEL, hndl=(
                    translate -> z=.delta_z
                )

                on -> type=ogl.DRAG, btn=ogl.BUTTON2, hndl=(
                    translate -> x=(.delta_x * 4), y=(.delta_y * 4)
                )

                translate -> z=-10.0
            }

        }
    }

    # Ambient Light
    add light {
        set type=ogl.AMBIENT
        set color=0x444444
    }

    # Ambient Light
    add light {
        set type=ogl.POINT
        set position=vec3(0.0, 1.0, 1.0)
    }
   
}